{% comment %}
  Reima Configurable Navigation
  Uses blocks from header section to create customizable nav tabs
  Each block of type 'reima_nav_tab' creates a navigation item
{% endcomment %}

{% comment %} Collect all reima_nav_tab blocks {% endcomment %}
{% assign nav_tabs = section.blocks | where: "type", "reima_nav_tab" %}

<nav class="reima-static-navigation" aria-label="Main navigation">
  <ul class="reima-static-nav-list">
    {% if nav_tabs.size > 0 %}
      {% comment %} Use configured blocks {% endcomment %}
      {% for block in nav_tabs %}
        <li class="reima-static-nav-item{% if block.settings.is_sale %} reima-sale-item{% endif %}"
            data-menu-item
            {{ block.shopify_attributes }}>
          <a href="{{ block.settings.tab_link | default: '#' }}" class="reima-static-nav-link{% if block.settings.is_sale %} sale-link{% endif %}">
            {{ block.settings.tab_title }}
          </a>

          {% if block.settings.has_dropdown %}
            {% comment %} Check if any dropdown content exists (menus, titles, or images) {% endcomment %}
            {% assign has_content = false %}
            {% assign col1_has_links = false %}
            {% assign col2_has_links = false %}
            {% assign col3_has_links = false %}

            {% if block.settings.col1_menu != blank %}
              {% if linklists[block.settings.col1_menu].links.size > 0 %}
                {% assign col1_has_links = true %}
                {% assign has_content = true %}
              {% endif %}
            {% endif %}
            {% if block.settings.col1_title != blank %}
              {% assign has_content = true %}
            {% endif %}

            {% if block.settings.col2_menu != blank %}
              {% if linklists[block.settings.col2_menu].links.size > 0 %}
                {% assign col2_has_links = true %}
                {% assign has_content = true %}
              {% endif %}
            {% endif %}
            {% if block.settings.col2_title != blank %}
              {% assign has_content = true %}
            {% endif %}

            {% if block.settings.col3_menu != blank %}
              {% if linklists[block.settings.col3_menu].links.size > 0 %}
                {% assign col3_has_links = true %}
                {% assign has_content = true %}
              {% endif %}
            {% endif %}
            {% if block.settings.col3_title != blank %}
              {% assign has_content = true %}
            {% endif %}

            {% if block.settings.promo_image != blank %}
              {% assign has_content = true %}
            {% endif %}

            {% if has_content %}
              <div class="reima-static-dropdown" data-dropdown>
                <div class="reima-static-dropdown-inner">
                  {% comment %} Column 1 {% endcomment %}
                  {% if block.settings.col1_title != blank or col1_has_links %}
                    <div class="reima-dropdown-column">
                      {% if block.settings.col1_title != blank %}
                        <h4 class="reima-dropdown-title">
                          <a href="{{ block.settings.tab_link }}">{{ block.settings.col1_title }}</a>
                        </h4>
                      {% endif %}
                      {% if col1_has_links %}
                        <ul class="reima-dropdown-list">
                          {% for link in linklists[block.settings.col1_menu].links %}
                            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                          {% endfor %}
                        </ul>
                        <a href="{{ block.settings.tab_link }}" class="reima-see-all">See All</a>
                      {% endif %}
                    </div>
                  {% endif %}

                  {% comment %} Column 2 {% endcomment %}
                  {% if block.settings.col2_title != blank or col2_has_links %}
                    <div class="reima-dropdown-column">
                      {% if block.settings.col2_title != blank %}
                        <h4 class="reima-dropdown-title">
                          <a href="{{ block.settings.tab_link }}">{{ block.settings.col2_title }}</a>
                        </h4>
                      {% endif %}
                      {% if col2_has_links %}
                        <ul class="reima-dropdown-list">
                          {% for link in linklists[block.settings.col2_menu].links %}
                            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                          {% endfor %}
                        </ul>
                      {% endif %}
                    </div>
                  {% endif %}

                  {% comment %} Column 3 {% endcomment %}
                  {% if block.settings.col3_title != blank or col3_has_links %}
                    <div class="reima-dropdown-column">
                      {% if block.settings.col3_title != blank %}
                        <h4 class="reima-dropdown-title">
                          <a href="{{ block.settings.tab_link }}">{{ block.settings.col3_title }}</a>
                        </h4>
                      {% endif %}
                      {% if col3_has_links %}
                        <ul class="reima-dropdown-list">
                          {% for link in linklists[block.settings.col3_menu].links %}
                            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                          {% endfor %}
                        </ul>
                      {% endif %}
                    </div>
                  {% endif %}

                  {% comment %} Promotional Image {% endcomment %}
                  {% if block.settings.promo_image != blank %}
                    <div class="reima-dropdown-promo">
                      <a href="{{ block.settings.promo_link | default: block.settings.tab_link }}" class="reima-promo-card">
                        <div class="reima-promo-image">
                          {{ block.settings.promo_image | image_url: width: 400 | image_tag: loading: 'lazy' }}
                        </div>
                        {% if block.settings.promo_title != blank %}
                          <span class="reima-promo-title">{{ block.settings.promo_title }}</span>
                        {% endif %}
                      </a>
                    </div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% endif %}
        </li>
      {% endfor %}
    {% else %}
      {% comment %} Fallback: Show default tabs if no blocks configured {% endcomment %}
      <li class="reima-static-nav-item reima-sale-item" data-menu-item>
        <a href="/collections/sale" class="reima-static-nav-link sale-link">Sale</a>
      </li>
      <li class="reima-static-nav-item" data-menu-item>
        <a href="/collections/all" class="reima-static-nav-link">Shop All</a>
      </li>
      <li class="reima-static-nav-item">
        <span class="reima-setup-hint">Add "Reima Nav Tab" blocks in Theme Customizer to configure navigation</span>
      </li>
    {% endif %}
  </ul>
</nav>

<script>
  // Simple hover/click handling for dropdown menus
  document.addEventListener('DOMContentLoaded', function() {
    const navItems = document.querySelectorAll('.reima-static-nav-item[data-menu-item]');
    let activeItem = null;
    let hoverTimeout = null;

    navItems.forEach(item => {
      const dropdown = item.querySelector('[data-dropdown]');
      if (!dropdown) return;

      // Mouse enter - show dropdown
      item.addEventListener('mouseenter', function() {
        clearTimeout(hoverTimeout);
        if (activeItem && activeItem !== item) {
          activeItem.classList.remove('is-open');
        }
        item.classList.add('is-open');
        activeItem = item;
      });

      // Mouse leave - hide dropdown with delay
      item.addEventListener('mouseleave', function() {
        hoverTimeout = setTimeout(() => {
          item.classList.remove('is-open');
          if (activeItem === item) activeItem = null;
        }, 100);
      });
    });

    // Close on click outside
    document.addEventListener('click', function(e) {
      if (!e.target.closest('.reima-static-nav-item')) {
        navItems.forEach(item => item.classList.remove('is-open'));
        activeItem = null;
      }
    });
  });
</script>

<style>
  /* ========================================
     Reima Static Navigation - Core Styles
     ======================================== */
  .reima-static-navigation {
    display: flex;
    align-items: center;
    height: 100%;
    flex: 1;
  }

  .reima-static-nav-list {
    display: flex;
    align-items: center;
    height: 100%;
    margin: 0;
    padding: 0;
    list-style: none;
    gap: 0;
    position: relative;
  }

  .reima-static-nav-item {
    position: static;
    height: 100%;
    display: flex;
    align-items: center;
  }

  /* Make header wrapper position relative for dropdown positioning */
  .reima-header-style .header-wrapper {
    position: relative;
  }

  .reima-static-nav-link {
    display: flex;
    align-items: center;
    padding: 0 16px;
    height: 100%;
    font-size: 14px;
    font-weight: 400;
    color: #333;
    text-decoration: none;
    letter-spacing: 0.01em;
    white-space: nowrap;
    position: relative;
    transition: color 0.2s ease;
  }

  /* Red underline on hover */
  .reima-static-nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 16px;
    right: 16px;
    height: 3px;
    background-color: #c41230;
    transform: scaleX(0);
    transform-origin: center;
    transition: transform 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .reima-static-nav-item:hover .reima-static-nav-link::after,
  .reima-static-nav-item.is-open .reima-static-nav-link::after {
    transform: scaleX(1);
  }

  /* Sale tab styling */
  .reima-sale-item .reima-static-nav-link,
  .reima-static-nav-link.sale-link {
    color: #c41230;
    font-weight: 500;
  }

  /* Setup hint */
  .reima-setup-hint {
    font-size: 12px;
    color: #999;
    padding: 0 16px;
    font-style: italic;
  }

  /* ========================================
     Dropdown Styles - Positioned from header
     ======================================== */
  .reima-static-dropdown {
    position: absolute !important;
    top: 100% !important;
    left: 0 !important;
    right: 0 !important;
    width: 100vw !important;
    margin-left: calc(-50vw + 50%) !important;
    background-color: #ffffff !important;
    background: #ffffff !important;
    border-top: 3px solid #c41230 !important;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12) !important;
    z-index: 99999 !important;

    /* Hidden state */
    opacity: 0;
    visibility: hidden;
    pointer-events: none;

    /* Smooth animation */
    transition:
      opacity 0.2s ease,
      visibility 0.2s;
  }

  /* Show dropdown */
  .reima-static-nav-item.is-open .reima-static-dropdown {
    opacity: 1 !important;
    visibility: visible !important;
    pointer-events: auto !important;
  }

  .reima-static-dropdown-inner {
    max-width: 1400px;
    margin: 0 auto;
    padding: 40px 60px 50px;
    display: flex !important;
    gap: 50px;
    background: #ffffff !important;
    min-height: 100px;
  }

  /* ========================================
     Dropdown Content
     ======================================== */
  .reima-dropdown-column {
    flex: 1;
    min-width: 160px;
    max-width: 220px;
    display: block !important;
    opacity: 1 !important;
    visibility: visible !important;
  }

  .reima-dropdown-title {
    font-size: 12px !important;
    font-weight: 700 !important;
    text-transform: uppercase !important;
    color: #333333 !important;
    letter-spacing: 0.08em !important;
    margin: 0 0 16px !important;
    line-height: 1.3 !important;
    display: block !important;
    opacity: 1 !important;
    visibility: visible !important;
  }

  .reima-dropdown-title a {
    color: #333333 !important;
    text-decoration: none !important;
    transition: color 0.2s ease;
    display: block !important;
  }

  .reima-dropdown-title a:hover {
    color: #c41230 !important;
  }

  .reima-dropdown-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .reima-dropdown-list a {
    font-size: 14px;
    color: #666;
    text-decoration: none;
    transition: color 0.2s ease;
    display: inline-block;
    line-height: 1.4;
  }

  .reima-dropdown-list a:hover {
    color: #c41230;
  }

  .reima-see-all {
    display: inline-block;
    margin-top: 16px;
    font-size: 14px;
    font-weight: 500;
    color: #c41230;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .reima-see-all:hover {
    opacity: 0.8;
  }

  /* Promotional Card */
  .reima-dropdown-promo {
    flex: 0 0 280px;
    max-width: 280px;
  }

  .reima-promo-card {
    display: block;
    text-decoration: none;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s ease;
  }

  .reima-promo-card:hover {
    transform: translateY(-4px);
  }

  .reima-promo-image {
    width: 100%;
    aspect-ratio: 4/3;
    overflow: hidden;
    border-radius: 8px;
  }

  .reima-promo-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .reima-promo-card:hover .reima-promo-image img {
    transform: scale(1.05);
  }

  .reima-promo-title {
    display: block;
    margin-top: 12px;
    font-size: 14px;
    font-weight: 500;
    color: #333;
  }

  /* ========================================
     Mobile - Hide static nav, show hamburger
     ======================================== */
  @media (max-width: 1024px) {
    .reima-static-navigation {
      display: none;
    }
  }

  /* Smaller screens - reduce padding */
  @media (max-width: 1200px) {
    .reima-static-nav-link {
      padding: 0 12px;
      font-size: 13px;
    }

    .reima-static-dropdown-inner {
      padding: 30px 40px 40px;
      gap: 40px;
    }

    .reima-dropdown-promo {
      flex: 0 0 220px;
      max-width: 220px;
    }
  }
</style>
