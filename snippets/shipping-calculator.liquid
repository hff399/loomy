<form action="">
  <country-province class="row no-gutters">
    <div class="col-12">
      <label class="heading-font font-normal text-sm d-block text-left">Country</label>
      <div class="select-input">
        <select
          class="form-control"
          id="AddressCountry_{{ form.id }}"
          name="address[country]"
          data-default="{{ shop.address.country }}"
          autocomplete="country"
          data-country-select
          shippingCountry
        >
          {{ all_country_option_tags }}
        </select>
      </div>
    </div>
    <div class="col-12">
      <label class="heading-font font-normal text-sm d-block text-left">Province</label>
      <div class="select-input">
        <select
          class="form-control"
          id="AddressProvince_{{ form.id }}"
          name="address[province]"
          autocomplete="address-level1"
          shippingProvince
        ></select>
      </div>
    </div>
    <div class="col-12">
      <label for="postal_code" class="heading-font font-normal text-sm d-block text-left">Postal / Zip code</label>
      <input
        type="text"
        class="form-control"
        placeholder="Postal/Zip Code"
        id="postal_code"
        name="address[zip]"
      >
    </div>
    <div class="col-12 d-flex align-items-end">
      <button type="submit" class="button button-sm">Get Estimate</button>
    </div>
    <div
      class="col-12"
      id="ShippingWrapperResponse"
      data-shipping-result
    ></div>
  </country-province>
</form>
