{% comment %}
  Product Benefits - Quick scannable benefits for product pages
  Uses product metafields or falls back to generic benefits
{% endcomment %}

<style>
  .product-benefits {
    margin: 1rem 0;
    padding: 0;
  }
  
  .product-benefits__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .product-benefits__item {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: #333;
    line-height: 1.4;
  }
  
  .product-benefits__icon {
    color: #22c55e;
    flex-shrink: 0;
    margin-top: 2px;
  }
  
  .product-benefits__text strong {
    color: #000;
  }
</style>

<div class="product-benefits">
  <ul class="product-benefits__list">
    {% comment %} Check for product-specific benefits in metafields {% endcomment %}
    {% if product.metafields.custom.benefits %}
      {% assign benefits = product.metafields.custom.benefits | split: '|' %}
      {% for benefit in benefits %}
        <li class="product-benefits__item">
          <span class="product-benefits__icon">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
          </span>
          <span class="product-benefits__text">{{ benefit }}</span>
        </li>
      {% endfor %}
