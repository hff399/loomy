                                             <li class="hamburger-menu-item menu-item-{{ link.links.size | plus: 1 }} mega-menu-hamburger-images-wrapper">
                                                {% render 'category-mega-menu', link_title: link_title, section: section %}
                                            </li>
                                        {% endif %}
                                     </ul>
                                </div> 
                            {% endif %}
                        </li>
                    {% endfor %}
                    </ul>
                 {% endif %}
                </hamburger-menu-drawer>
            </div>

            {% if section.settings.show_location_and_language or section.settings.enable_social_icons  %}
            <div class="mobile-menu-footer-content-wrapper">
                {% liquid
                    assign social_icons = true
                    if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_linkedin_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
                      assign social_icons = false
                    endif
                %}
                {% if social_icons and section.settings.enable_social_icons %}
                <div class="mobile-menu-icons social-icons text-center">
                    {% render 'social-icons' %}
                </div>
                {% endif %}

                {% if section.settings.show_location_and_language %}
                    <div class="mobile-menu-localization-form">
                      {% render 'localization-form', section: section %}
                    </div>
                  {% endif %}
            </div>
            {% endif %}
        </div>
    </div>
