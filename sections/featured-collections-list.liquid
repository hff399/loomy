<div class="section-wrapper scheme-{{ section.settings.color_scheme }} section-spacing pos-relative section-{{ section.settings.section_background }} {{ corner_style }}{% if section.settings.shape != 'none' %} section-shape-{{ section.settings.shape_position }} shape-{{ section.settings.shape }}{% endif %}">
  {% if shape_block_count > 0 %}
    <shape-icons class="img-with-shapes-wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'shape' and block.settings.shape != 'none' %}
          <div
            class="shape-icon shape {{ block.settings.shape }}"
            style="--shape-color:{{ block.settings.shape_color }}"
            id="icon-shape-{{ block.id }}"
            data-shape-icon
          >
            <template>
                      {% render 'bg-shape'
                        , shape: block.settings.shape %}
                    </template>
          </div>
        {% endif %}
      {% endfor %}
    </shape-icons>
  {% endif %}

  {% if section.settings.background_image != blank %}
    <div class="background-overlay-image media-overlay overlay-style-{{ section.settings.overlay_style }} blur-background-{{ section.settings.blur_background_image }}">
      {% render 'lazy-images', image: section.settings.background_image, loading: loading %}
    </div>
  {% endif %}
  {% if section.settings.heading != blank or section.settings.description != blank %}
    <div class="{{ settings.container_width }}">
    <div class="section-header">
    <div
        class="section-header-content-wrapper text-{{ section.settings.alignment }} m-auto"
      >
                  {% if section.settings.heading != blank %}
                  <{{ section.settings.seo_heading }} class="section-heading {{ section.settings.heading_font }} {{ section.settings.heading_size }}{% if settings.enable_heading_animation %} animate-element-parent{% endif %}">
                        {% if settings.enable_heading_animation %}
                          <animate-element data-animate="fade-up-large" data-animate-delay="50">
                        {% endif %}
                        {%- capture markersPrefix -%}
                          <span class="markers-text {{ section.settings.markers_font }}">
                        {%- endcapture -%} 
                        {%- capture markersSuffix -%}
                          </span>
                        {%- endcapture -%}
                  
                          {{- section.settings.heading | replace: '++', '<br/>' | replace: "[", markersPrefix | replace: "]", markersSuffix  -}}
                        {% if settings.enable_heading_animation %}
                          </animate-element>
                        {% endif %}
                    </{{ section.settings.seo_heading }}>
                  {% endif %} 
                {% if section.settings.description != blank %}
                  <div class="section-description{% if settings.enable_heading_animation %} animate-element-parent{% endif %}">
                        {% if settings.enable_heading_animation %}
                        <animate-element data-animate="fade-up-large" data-animate-delay="100">
                        {% endif %}
                            <p class="{{ section.settings.description_size }}">
                              {{ section.settings.description | newline_to_br }}
                            </p>
                            {% if settings.enable_heading_animation %}
                          </animate-element>
                            {% endif %}
                  </div>
                {% endif %}
      </div>
    </div>
    </div>
  {% endif %}

  <div class="{{ containerClass }}">
    <div class="featured-collections-list">
      <{% if settings.enable_card_animation %}animate-motion-list{% else %}div{% endif %} class="d-grid featured-collections-list-wrapper card-style-{{ section.settings.card_style }}">
      {% for block in section.blocks %}
          {% if block.type == 'collection' %}
            {% assign collection = block.settings.collection %}
            <div id="featured-collections-item-{{ block.id }}" class="featured-collections-item image-position-{{ section.settings.image_position }}" data-motion-list>
              {% if section.settings.image_position == 'overlay' or section.settings.image_position == 'embedded' %}
              <{% if block.settings.collection != blank %}a href="{{ collection.url }}"{% else %}div{% endif %} class="featured-collection-img image-shape-{{ section.settings.image_shape }}">
                  <div
                    class="media-fixed media-overlay overlay-style-{{ section.settings.card_overlay_style }}"
                    {% if section.settings.image_shape == 'flower' %}
                      style="clip-path: url(#clip-path-{{ section.settings.image_shape }}-{{ section.id }});-webkit-clip-path: url(#clip-path-{{ section.settings.image_shape }}-{{ section.id }});"
                    {% endif %}
                  >
                    {% if block.settings.images != blank %}
                      {% render 'lazy-images', image: block.settings.images, class: 'collection-image', loading: loading %}
                    {% elsif collection.featured_image %}
                      {% render 'lazy-images', image: collection.featured_image, class: 'collection-image', loading: loading %}
                    {% else %}
                      {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
                      {%- assign placeholder_image = 'collection-apparel-' | append: placeholder_image_index -%}
                      {{ placeholder_image | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                  </div>
                  {% if section.settings.image_shape == 'flower' %}
                    <svg class="image-shape-border-svg pos-absolute" viewBox="0 0 200 250">
                      <use style="fill: none" href="#outline-{{ section.settings.image_shape }}-{{ section.id }}"></use>
                    </svg>
                  {% endif %}
                </{% if block.settings.collection != blank %}a{% else %}div{% endif %}>
              {% endif %}
              <div class="featured-collection-content text-center">
                {% if section.settings.image_position == 'overlay' or section.settings.image_position == 'embedded' %}
                  {% if block.settings.background_image != blank %}
                    <div class="featured-collection-content-bg-shape"
                    >
                      {% render 'lazy-images', image: block.settings.background_image, loading: loading %}
                    </div>
                  {% endif %}
                {% else %}
                  <div
                    class="featured-collection-content-bg-shape media-overlay overlay-style-{{ section.settings.card_overlay_style }}"
                  >
                    {% if block.settings.images != blank %}
                      {% render 'lazy-images', image: block.settings.images, class: 'collection-image', loading: loading %}
                    {% elsif collection.featured_image %}
                      {% render 'lazy-images', image: collection.featured_image, class: 'collection-image', loading: loading %}
                    {% else %}
                      {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
                      {%- assign placeholder_image = 'collection-apparel-' | append: placeholder_image_index -%}
                      {{ placeholder_image | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                  </div>
                {% endif %}
                <div
                  class="featured-collection-content-data">
                {% if block.settings.title != blank %}
                  <{{ section.settings.block_seo_heading }} class="featured-collection-content-heading heading-font {{ section.settings.block_heading_size }}">{{ block.settings.title }}</{{ section.settings.block_seo_heading }}>
                {% elsif block.settings.collection != blank %}
                  <{{ section.settings.block_seo_heading }} class="featured-collection-content-heading heading-font {{ section.settings.block_heading_size }}">{{ collection.title }}</{{ section.settings.block_seo_heading }}>
                {% endif %}

                {% if block.settings.description != blank %}
                  <p class="featured-collection-content-desc {{ section.settings.block_description_size }}">
                    {{ block.settings.description | newline_to_br }}
                  </p>
                {% endif %}

                {% liquid
                  assign button_link = ''
                  if block.settings.button_link != blank
                    assign button_link = block.settings.button_link
                  elsif block.settings.collection != blank
                    assign button_link = collection.url
                  endif
                %}

                {% if block.settings.button_text != blank and button_link != blank %}
                  <div class="media-button-wrap">
                    {% render 'button-wrapper',
                      block_settings: block,
                      button_style: section.settings.block_button_style,
                      button_text: block.settings.button_text,
                      button_link: button_link,
                      button_size: section.settings.block_button_size
                    %}
                  </div>
                {% endif %}
              </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </{% if settings.enable_card_animation %}animate-motion-list{% else %}div{% endif %}>
    </div>
  </div>
  {% if section.settings.shape != 'none' %}
    <div class="section-shape-wrapper shape-position-{{ section.settings.shape_position }} shape-flip-{{ section.settings.flip_shape }}">
      {% render 'shapes', shape: section.settings.shape %}
    </div>
  {% endif %}
</div> 

  <style>
    #shopify-section-{{ section.id }}{
        --top-spacing: {{ section.settings.top_space_desktop }}px;
        --bottom-spacing: {{ section.settings.bottom_space_desktop }}px;
        --round-section-radius:{{ section.settings.corner_radius }}px;
    }
    {% for block in section.blocks %}
      {% if block.type == 'collection' %}
        #featured-collections-item-{{ block.id }}{
          --body-background:{{ block.settings.card_background_color }};
          --heading-color:{{ block.settings.card_text_color }};
          --text-color:{{ block.settings.card_text_color }};
          --highlight-text-color: {{ block.settings.card_border_color }};
          --border-color: {{ block.settings.card_border_color.red }}, 
          {{ block.settings.card_border_color.green }}, 
          {{ block.settings.card_border_color.blue }};
        }
      {% endif %}
    {% endfor %}
    @media only screen and (max-width:767px) {
        #shopify-section-{{ section.id }}{
            --top-spacing: {{ section.settings.top_space_mobile }}px;
            --bottom-spacing: {{ section.settings.bottom_space_mobile }}px;
        }
    }

    {% for block in section.blocks %}
      {% case block.type %}
      {% when 'shape' %}
      #shopify-section-{{ section.id }} #icon-shape-{{ block.id }} {  
        --shape-horizontal: {{ block.settings.shape_desktop_horizontal }}%;
        --shape-vertical: {{ block.settings.shape_desktop_vertical }}%;
        --shape-width: {{ block.settings.shape_width }}px;
      }
      @media only screen and (max-width: 767px) {
         #shopify-section-{{ section.id }} #icon-shape-{{ block.id }} {
          --shape-horizontal: {{ block.settings.shape_mobile_horizontal }}%;
          --shape-vertical: {{ block.settings.shape_mobile_vertical }}%;
          {% if block.settings.icon_visibility == 'large' %}
            display: none !important;
          {% endif %}
        }
      }
      {% if block.settings.icon_visibility == 'small' %}
        @media(min-width: 768px) {
          #shopify-section-{{ section.id }} #icon-shape-{{ block.id }} {
            display: none !important;
          }
        }
      {% endif %}
    {% endcase %}
  {% endfor %}

  {% if section.settings.section_visibility == 'large' %}
    @media(max-width: 767px) {
      #shopify-section-{{ section.id }} {
        display: none !important;
      }
    }
  {% elsif section.settings.section_visibility == 'small' %}
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} {
      display: none !important;
    }
  }
  {% endif %}
</style>

