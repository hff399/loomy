{% if section.index <= 2 %}
  {{ 'product.css' | asset_url | preload_tag: as: 'style' }}
{% endif %}
{{ 'product.css' | asset_url | stylesheet_tag }}
<script>
  window.colorOptionNames = {{ settings.media_grouping_option | default: 'Color' | json }};
</script>

{%- capture corner_style -%} 
  {% if section.settings.corner_style == 'top' %}
      round-section round-top
      {% elsif section.settings.corner_style == 'bottom' %}
      round-section round-bottom
      {% elsif section.settings.corner_style == 'both' %}
      round-section round-bottom round-top
  {% endif %}
{%- endcapture -%}
{% liquid
  if section.settings.section_container_width == 'global'
    assign containerClass = settings.container_width
  else
    assign containerClass = section.settings.section_container_width
  endif
%}
{% liquid
  assign currentVariant = product.selected_or_first_available_variant
  assign product_form_id = 'main-product-form-' | append: section.id

  if section.settings.thumbnails_style == 'horizontal'
    assign thumbnails_position = 'outside_image'
  else
    assign thumbnails_position = section.settings.thumbnails_position
  endif
%}

<div class="section-wrapper scheme-{{ section.settings.color_scheme }} section-spacing {{ corner_style }} section-{{ section.settings.section_background }} sticky-content-{{ section.settings.enable_sticky_content }}">
  <div class="{{ containerClass }}">
    {% assign media_style = section.settings.media_style %}
    <div class="product-main">
      {% render 'product-content',
            section: section,
            product: product,
            currentVariant: currentVariant,
            product_form_id: product_form_id,
            thumbnails_style: section.settings.thumbnails_style,
            hide_thumbnails_mobile: section.settings.hide_thumbnails_mobile,
            thumbnails_position: thumbnails_position,
            media_style: media_style,
            source: 'main-product',
            enable_zoom: true,
            collapsible_content_style: section.settings.collapsible_content_style,
            image_width: section.settings.image_width,
            info_space: section.settings.product_info_space,
            video_autoplay: section.settings.enable_video_autoplay,
            video_looping: section.settings.enable_video_looping
      %}
    </div>
  </div>
</div>

{% if section.settings.show_product_video %}
  {% assign video_found = false %}
  {% capture product_video %}
    {% for media in product.media %}
      {% if video_found == false %}
        {% case media.media_type %}
         {%- when 'external_video' -%}
           {% liquid assign videourl =  media | external_video_url %}
           {% if videourl contains 'vimeo' %}
             <iframe
              src="https://player.vimeo.com/video/{{ media.external_id }}?autoplay=1&loop=1&autopause=0&muted=1"
              class="product-video-popup"
              allow="autoplay; fullscreen encrypted-media"
              data-autoplay="true"
              allowfullscreen
              title="product video popup vimeo"></iframe>
            {% else %}
            <iframe
              src="https://www.youtube.com/embed/{{ media.external_id }}?autoplay=1&mute=1&loop=1&controls=0&rel=0&showinfo=0&enablejsapi=1&playlist={{ media.external_id }}"
              class="product-video-popup"
              allow="autoplay; encrypted-media"
              frameborder="0"
              allowfullscreen
              data-autoplay="true"
              title="product video popup youtube"></iframe>
          {% endif %}
          {% assign video_found = true %}
          {%- when 'video' -%}
            {{ media | media_tag :
                  loading: 'lazy',
                  class: 'no-js-hidden product-video-popup',
                  autoplay: true,
                  playsinline: true,
                  muted: true,
                  loop: true,
                  controls: false,
                  preload: 'none'
              }}
            {% assign video_found = true %}
        {% endcase %}
    {% endif %}
    {% endfor %}
   
     {% if video_found == false %}
      {% for block in section.blocks %}
        {% if block.type == 'video' %}
          {% if block.settings.video != blank %}
            {{ block.settings.video | media_tag :
                    loading: 'lazy',
                    class: 'no-js-hidden product-video-popup',
                    autoplay: true,
                    playsinline: true,
                    muted: true,
                    loop: true,
                    controls: false,
                    preload: 'none'
                }}
          {% endif %}
        {% endif %}
      {% endfor %}
    {% endif %}
  {% endcapture %}
  {% if product_video != blank %}
    <product-video-popup class="product-video-main-wrapper scheme-{{ section.settings.color_scheme }} video-position-{{ section.settings.video_position }} overflow-hidden">
      <div class="product-video-holder pos-relative">
        <div class="video-popup-close" data-close-popup>
          <button
            class="drawer-close-btn close-button"
            aria-hidden="true"
            aria-label="Close popup">
            {% render 'svg-icons'
              , icon: 'close' %}
            {% render 'svg-icons'
              , icon: 'close-bg' %}
          </button>
        </div>
        <div class="product-video-inner">
          <div class="media media-fixed">
            {{ product_video }}
          </div>
        </div>
      </div>
    </product-video-popup>
  {% endif %}
{% endif %}

