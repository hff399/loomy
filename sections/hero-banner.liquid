{% if section.index <= 2 %}
  {{ 'slideshow.css' | asset_url | stylesheet_tag: preload: true }}
{% else %}
{{ 'slideshow.css' | asset_url | stylesheet_tag }}
{% endif %}


{% liquid
  if section.settings.section_container_width == 'global'
    assign containerClass = settings.container_width
  else
    assign containerClass = section.settings.section_container_width
  endif
%}
<div class="section-wrapper scheme-{{ section.settings.color_scheme }} section-spacing pos-relative section-{{ section.settings.section_background }} {% if section.settings.shape != 'none' %} section-shape-enable section-shape-{{ section.settings.shape_position }} shape-{{ section.settings.shape }}{% endif %}{% if section.settings.enable_sticky %} section-sticky-enable{% endif %} section-border-{{ section.settings.enable_border }}">
  <div class="{{ containerClass }}">
    <div class="slideshow-outer-wrapper hero-banner-main-wrapper">
      {% if section.blocks.size > 1 %}
        <swiper-slideshow>
          <div
            class="swiper navigation-{{ section.settings.carousel_navigation }} animation-{{ section.settings.animation_style }}"
            data-swiper='
              {
                "loop": true,
                {% if section.settings.animation_style == 'fade' %}
                "effect": "fade",
                {% elsif section.settings.animation_style == 'coverflow' %}
                "effect": "coverflow",
                "coverflowEffect": {
                    "rotate": 50,
                    "stretch": "50%",
                    "depth": 200,
                    "modifier": 1,
                    "slideShadows": true
                },
                {% elsif section.settings.animation_style == 'creative' %}
                "effect": "creative",
                    "creativeEffect": {
                    "prev": {
                        "shadow": true,
                        "translate": [0, 0, -400]
                    },
                    "next": {
                        "translate": ["100%", 0, 0]
                    }
                    },
                {% endif %}
                "speed": 600,
                "slidesPerView": 1,
                 "navigation": {
                    "enabled": true,
                    "nextEl": ".swiper-button-next-{{ section.id }}",
                    "prevEl": ".swiper-button-prev-{{ section.id }}"
                  },
                    "pagination": {
                            "el": ".swiper-pagination-{{ section.id }}",
                            "type": "bullets",
                            "clickable":true
                        },
                {% if section.settings.auto_rotate %}
                "autoplay":  {
                  "delay": {{ section.settings.change_slides_speed | times: 1000 }},
                  "disableOnInteraction": false
                },
                {% endif %}
                "grabCursor": true
              }
            '
          >
      {% endif %}
      <div class="slideshow-wrapper{% if section.blocks.size > 1 %} swiper-wrapper{% endif %}">
        {% for block in section.blocks %}
             <div
                id="slideshowItem-{{ block.id }}"
                class="{% if section.blocks.size > 1  %}swiper-slide {% endif %}slideshow-item pos-relative scheme-{{ block.settings.color_scheme }} slideshow-framed-slide-wrapper"
                {{ block.shopify_attributes }}
              >
                {%- if block.settings.mobile_slide_image != blank and block.settings.slide_video == blank %}
                  <div class="slideshow-media media-wrapper d-block d-md-none">
                    <div class="media {% if section.settings.desktop_height == 'auto' %} d-media-adapt{% else %} d-media-fixed{% endif %}{% if section.settings.mobile_height == 'auto' %} m-media-adapt{% else %} m-media-fixed{% endif %}">
                      {% liquid
                        if block.settings.mobile_slide_image != blank
                          assign height = block.settings.mobile_slide_image.width | divided_by: block.settings.mobile_slide_image.aspect_ratio | round
                          assign sizes = '(min-width: 768px) 1440px, 100vw'
                          assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                          if forloop.first
                            echo block.settings.mobile_slide_image | image_url: width: 3840 | image_tag: height: height, sizes: sizes, widths: widths, fetchpriority: 'high', loading: 'eager'
                          else
                            echo block.settings.mobile_slide_image | image_url: width: 3840 | image_tag: height: height, sizes: sizes, widths: widths, fetchpriority: 'low', loading: 'lazy'
                          endif
                        endif
                      %}
                    </div>
                  </div>
                {% endif %}

                <div class="slideshow-media media-wrapper{% if block.settings.mobile_slide_image != blank and block.settings.slide_video == blank %} d-none d-md-block{% endif %}">
                  <div class="media {% if section.settings.desktop_height == 'auto' %} d-media-adapt{% else %} d-media-fixed{% endif %}{% if section.settings.mobile_height == 'auto' %} m-media-adapt{% else %} m-media-fixed{% endif %}">
                    {% if block.settings.slide_video != blank %}
                      {{
                        block.settings.slide_video
                        | media_tag:
                          loading: 'lazy',
                          class: 'no-js-hidden slide-video',
                          autoplay: true,
                          loop: true,
                          mute: true,
                          controls: false,
                          preload: 'none'
                      }}
                    {% elsif block.settings.desktop_slide_image != blank %}
                      {% liquid
                        if block.settings.desktop_slide_image != blank
                          assign height = block.settings.desktop_slide_image.width | divided_by: block.settings.desktop_slide_image.aspect_ratio | round
                          assign sizes = '100vw'
                          assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                          if forloop.first
                            echo block.settings.desktop_slide_image | image_url: width: 3840 | image_tag: height: height, sizes: sizes, widths: widths, fetchpriority: 'high', loading: 'eager'
                          else
                            echo block.settings.desktop_slide_image | image_url: width: 3840 | image_tag: height: height, sizes: sizes, widths: widths, loading: 'lazy', fetchpriority: 'low'
                          endif
                        endif
                      %}
                    {% else %}
                      {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                  </div>
                </div>
 
                  <div class="slideshow-content-inner">
                  <div class="{{ section.settings.content_container }}"> 
                    {% if block.settings.heading != blank %}
                      <div class="slideshow-heading-wrap heading-color-effect-{{ block.settings.heading_color_effect }}">
                        <{{ block.settings.seo_heading }} class="slideshow-heading {{ block.settings.heading_font }} {{ block.settings.heading_size }} {{ block.settings.heading_font_weight }}{% if settings.enable_heading_animation %} animate-element-parent{% endif %}">
                          {% if settings.enable_heading_animation %}
                            <animate-element data-animate="fade-up-large" data-animate-delay="50">
                          {% endif %}
                          {%- capture markersPrefix -%}
                            <span class="markers-text {{ block.settings.markers_font }} {{ block.settings.heading_font_weight }}">
                          {%- endcapture -%}
                          {%- capture markersSuffix -%}
                            </span>
                          {%- endcapture -%}
                          {{- block.settings.heading | replace: '++', '<br/>' | replace: "[", markersPrefix | replace: "]", markersSuffix-}}
                          {% if settings.enable_heading_animation %}
                            </animate-element>
                          {% endif %}
                        </{{ block.settings.seo_heading }}>
                      </div>
                    {% endif %}
                    {% liquid 
                      assign check_content = false  
                      if block.settings.description != blank
                      assign check_content = true
                      elsif block.settings.button_text != blank and block.settings.button_link != blank
                        assign check_content = true
                      endif
                     %}
                    {% if check_content %}
                    <div class="framed-slide-bottom-content-wrapper">
                      {% if block.settings.description != blank %}
                        <div class="framed-slide-description">
                          <p class="{{ block.settings.description_size }}{% if settings.enable_heading_animation %} animate-element-parent{% endif %}">
                            {% if settings.enable_heading_animation %}
                              <animate-element data-animate="fade-up-large" data-animate-delay="100">
                            {% endif %}
                              {{ block.settings.description | newline_to_br }}
                            {% if settings.enable_heading_animation %}
                              </animate-element>
                            {% endif %}
                          </p>
                        </div>
                      {% endif %}
                      {% if block.settings.button_text != blank and block.settings.button_link != blank %}
                        <div class="framed-slide-media-button-wrap{% if settings.enable_heading_animation %} animate-element-parent{% endif %}">
                          {% if settings.enable_heading_animation %}
                            <animate-element data-animate="fade-up-large" data-animate-delay="150">
                          {% endif %}
                          {% render 'button-wrapper',
                            block_settings: block,
                            button_style: block.settings.button_style,
                            button_text: block.settings.button_text,
                            button_link: block.settings.button_link,
                            button_size: block.settings.button_size, 
                          %}
                          {% if settings.enable_heading_animation %}
                            </animate-element>
                          {% endif %}
                        </div>
                      {% endif %}
                    </div> 
                   {% endif %}
                </div>
              </div>
              </div>
        {% endfor %}
      </div>
      {% if section.blocks.size > 1 %}
        <div class="{{ section.settings.content_container }} pos-relative">
          <div class="main-slideshow-nav swiper-button-wrapper d-bottom-right">
            <div class="slideshow-nav-btn slideshow-prev cursor-pointer swiper-button-prev-{{ section.id }} arrow-style-{{ settings.arrow_style }}">
              {% if settings.arrow_style == 'star' %}
                {% render 'svg-icons', icon: 'star-arrow-prev' %}
              {% else %}
                {% render 'svg-icons', icon: 'arrow-icon-prev' %}
              {% endif %}
            </div>
            <div class="slideshow-nav-btn slideshow-next cursor-pointer swiper-button-next-{{ section.id }} arrow-style-{{ settings.arrow_style }}">
              {% if settings.arrow_style == 'star' %}
                {% render 'svg-icons', icon: 'star-arrow-next' %}
              {% else %}
                {% render 'svg-icons', icon: 'arrow-icon-next' %}
              {% endif %}
            </div>
          </div>
          <div
            class="main-slideshow-pagination slideshow-pagination swiper-pagination-{{ section.id }} d-bottom-right slideshow-autoplay-{{section.settings.auto_rotate}}"
          ></div>
        </div>
        </div>
        </swiper-slideshow>
      {% endif %}
    </div>
  </div>

  {% if section.settings.shape != 'none' %}
    <div class="section-shape-wrapper shape-position-{{ section.settings.shape_position }} shape-flip-{{ section.settings.flip_shape }}">
      {% render 'shapes', shape: section.settings.shape %}
    </div>
  {% endif %}
</div>
<style>
      #shopify-section-{{ section.id }}{
        --top-spacing: {{ section.settings.top_space_desktop }}px;
        --bottom-spacing: {{ section.settings.bottom_space_desktop }}px;
        --autoplay-speed: {{ section.settings.change_slides_speed }}s;
        --slideshow-section-radius: {{ section.settings.slideshow_corner_radius }}px;
      }
      @media only screen and (min-width:768px) {
        #shopify-section-{{ section.id }}{
          --top-spacing: {{ section.settings.top_space_desktop }}px;
          --bottom-spacing: {{ section.settings.bottom_space_desktop }}px;
          --media-height: {% if section.settings.desktop_height == '100vh' %}100vh{% else %}{{ section.settings.desktop_custom_height }}px{% endif %};
          {% if section.blocks.first.settings.slide_video != blank %}
            --image-ratio: {{- 1 | divided_by : section.blocks.first.settings.slide_video.aspect_ratio | times: 100 -}}%;
          {% elsif section.blocks.first.settings.desktop_slide_image != blank %}
            --image-ratio: {{- 1 | divided_by : section.blocks.first.settings.desktop_slide_image.aspect_ratio | times: 100 -}}%;
          {%- else -%}
            --image-ratio: 50%;
          {% endif %}
        }
      }
    @media only screen and (max-width:767px) {
      #shopify-section-{{ section.id }}{
        --top-spacing: {{ section.settings.top_space_mobile }}px;
        --bottom-spacing: {{ section.settings.bottom_space_mobile }}px;
        --media-height: {% if section.settings.mobile_height == '100vh' %}100vh{% else %}{{ section.settings.mobile_custom_height }}px{% endif %};
        {% if section.blocks.first.settings.slide_video != blank %}
          --image-ratio: {{- 1 | divided_by : section.blocks.first.settings.slide_video.aspect_ratio | times: 100 -}}%;
        {% elsif section.blocks.first.settings.mobile_slide_image != blank %}
          --image-ratio: {{- 1 | divided_by : section.blocks.first.settings.mobile_slide_image.aspect_ratio | times: 100 -}}%;
        {% elsif section.blocks.first.settings.desktop_slide_image != blank %}
          --image-ratio: {{- 1 | divided_by : section.blocks.first.settings.desktop_slide_image.aspect_ratio | times: 100 -}}%;
        {%- else -%}
          --image-ratio: 100%;
        {% endif %}
      }
    }
    {% if section.settings.section_visibility == 'large' %}
    @media(max-width: 767px) {
      #shopify-section-{{ section.id }} {
        display: none !important;
      }
    }
  {% elsif section.settings.section_visibility == 'small' %}
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} {
      display: none !important;
    }
  }
  {% endif %}
</style>
{% schema %}
{
  "name": "t:sections.hero-banner.name",
  "tag": "section",
  "class": "slideshow-section hero-banner-section",
  "disabled_on": {
    "groups": ["header", "footer", "custom.Overlay"]
  },
  "settings": [
    {
      "type": "select",
      "id": "section_visibility",
      "label": "t:sections.all.section_visibility.label",
      "default": "always",
      "options": [
        {
          "label": "t:sections.all.section_visibility.always.label",
          "value": "always"
        },
        {
          "label": "t:sections.all.section_visibility.small.label",
          "value": "small"
        },
        {
          "label": "t:sections.all.section_visibility.large.label",
          "value": "large"
        }
      ]
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "secondary"
    },
    {
      "type": "select",
      "id": "section_background",
      "label": "t:sections.all.section_background.label",
      "default": "solid",
      "options": [
        {
          "label": "t:sections.all.section_background.solid.label",
          "value": "solid"
        },
        {
          "label": "t:sections.all.section_background.gradient.label",
          "value": "gradient"
        }
      ]
    },
    {
      "type": "select",
      "id": "section_container_width",
      "label": "t:sections.all.section_container_width.label",
      "default": "container-fullwidth",
      "options": [
        {
          "label": "t:sections.all.section_container_width.global.label",
          "value": "global"
        },
        {
          "label": "t:sections.all.section_container_width.container-sm.label",
          "value": "container-sm"
        },
        {
              "label": "t:sections.all.section_container_width.container.label",
              "value": "container-md"
            },
            {
              "label": "t:sections.all.section_container_width.container-md.label",
              "value": "container"
            },
        {
          "label": "t:sections.all.section_container_width.container-fullwidth.label",
          "value": "container-fullwidth"
        },
        {
          "label": "t:sections.all.section_container_width.no-container.label",
          "value": "no-container"
        }
      ]
    },
    {
      "type": "select",
      "id": "content_container",
      "label": "t:sections.slideshow.settings.content_container.label",
      "default": "container-fullwidth",
      "options": [
        {
          "label": "t:sections.all.section_container_width.container-sm.label",
          "value": "container-sm"
        },
        {
          "label": "t:sections.all.section_container_width.container.label",
          "value": "container"
        },
        {
          "label": "t:sections.all.section_container_width.container-fullwidth.label",
          "value": "container-fullwidth"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "enable_sticky",
      "label": "t:sections.slideshow.settings.enable_sticky.label",
      "default": false
    },
    {
      "type": "header",
      "content": "t:sections.slideshow.settings.header.slides"
    },
    {
      "type": "range",
      "id": "slideshow_corner_radius",
      "label": "t:sections.slideshow.settings.slideshow_corner_radius.label",
      "default": 35,
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "animation_style",
      "label": "t:sections.slideshow.settings.animation_style.label",
      "default": "slide",
      "options": [
        {
          "label": "t:sections.slideshow.settings.animation_style.coverflow.label",
          "value": "coverflow"
        },
        {
          "label": "t:sections.slideshow.settings.animation_style.creative.label",
          "value": "creative"
        },

        {
          "label": "t:sections.slideshow.settings.animation_style.fade.label",
          "value": "fade"
        },
        {
          "label": "t:sections.slideshow.settings.animation_style.slide.label",
          "value": "slide"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "t:sections.slideshow.settings.auto_rotate.label",
      "default": false
    },
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 3,
      "max": 9,
      "step": 2,
      "unit": "s",
      "label": "t:sections.slideshow.settings.change_slides_speed.label",
      "default": 5
    },
    {
      "type": "select",
      "id": "carousel_navigation",
      "label": "t:sections.all.pagination.label",
      "default": "dots",
      "options": [
        {
          "label": "t:sections.all.desktop_pagination.arrows.label",
          "value": "arrows"
        },
        {
          "label": "t:sections.all.desktop_pagination.dots.label",
          "value": "dots"
        },
        {
          "label": "t:sections.all.desktop_pagination.none.label",
          "value": "none"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "enable_border",
      "label": "t:sections.slideshow.settings.enable_border.label",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.slideshow.settings.header.slides_height"
    },
    {
      "type": "paragraph",
      "content": "t:sections.all.headers.desktop"
    },
    {
      "type": "select",
      "id": "desktop_height",
      "label": "t:sections.slideshow.settings.desktop_height.label",
      "default": "custom",
      "options": [
        {
          "label": "t:sections.slideshow.settings.desktop_height.auto.label",
          "value": "auto"
        },
        {
          "label": "t:sections.slideshow.settings.desktop_height.full_screen.label",
          "value": "100vh"
        },
        {
          "label": "t:sections.slideshow.settings.desktop_height.custom.label",
          "value": "custom"
        }
      ]
    },
    {
      "type": "range",
      "id": "desktop_custom_height",
      "label": "t:sections.slideshow.settings.desktop_custom_height.label",
      "default": 830,
      "step": 10,
      "min": 500,
      "max": 1000,
      "unit": "px"
    },
    {
      "type": "paragraph",
      "content": "t:sections.all.headers.mobile"
    },
    {
      "type": "select",
      "id": "mobile_height",
      "label": "t:sections.slideshow.settings.desktop_height.label",
      "default": "custom",
      "options": [
        {
          "label": "t:sections.slideshow.settings.desktop_height.auto.label",
          "value": "auto"
        },
        {
          "label": "t:sections.slideshow.settings.desktop_height.full_screen.label",
          "value": "100vh"
        },
        {
          "label": "t:sections.slideshow.settings.desktop_height.custom.label",
          "value": "custom"
        }
      ]
    },
    {
      "type": "range",
      "id": "mobile_custom_height",
      "label": "t:sections.slideshow.settings.desktop_custom_height.label",
      "default": 580,
      "step": 10,
      "min": 300,
      "max": 800,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "t:sections.all.headers.background_shape"
    },
    {
      "type": "select",
      "id": "shape",
      "default": "none",
      "label": "t:sections.all.shape.label",
      "options": [
        {
          "value": "none",
          "label": "t:sections.all.shape.none.label"
        },
        {
          "value": "curve",
          "label": "t:sections.all.shape.curve.label"
        },
        {
          "value": "deep_curve",
          "label": "t:sections.all.shape.deep_curve.label"
        },
        {
          "value": "cloud",
          "label": "t:sections.all.shape.cloud.label"
        },
        {
          "value": "wavelong",
          "label": "t:sections.all.shape.wave_long.label"
        },
        {
          "value": "wave",
          "label": "t:sections.all.shape.wave.label"
        },
        {
          "value": "mountain",
          "label": "t:sections.all.shape.mountain.label"
        },
        {
          "value": "brush-effect",
          "label": "t:sections.all.shape.brush-effect.label"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "flip_shape",
      "label": "t:sections.all.shape_position.flip_shape.label",
      "default": false
    },
    {
      "type": "select",
      "id": "shape_position",
      "default": "bottom",
      "label": "t:sections.all.shape_position.label",
      "options": [
        {
          "value": "top",
          "label": "t:sections.all.shape_position.top.label"
        },
        {
          "value": "bottom",
          "label": "t:sections.all.shape_position.bottom.label"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:sections.all.spacing.section_spacing_heading"
    },
    {
      "type": "range",
      "id": "top_space_desktop",
      "label": "t:sections.all.spacing.top_space_desktop",
      "default": 15,
      "min": 0,
      "max": 150,
      "step": 5
    },
    {
      "type": "range",
      "id": "bottom_space_desktop",
      "label": "t:sections.all.spacing.bottom_space_desktop",
      "default": 0,
      "min": 0,
      "max": 150,
      "step": 5
    },
    {
      "type": "range",
      "id": "top_space_mobile",
      "label": "t:sections.all.spacing.top_space_mobile",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 5
    },
    {
      "type": "range",
      "id": "bottom_space_mobile",
      "label": "t:sections.all.spacing.bottom_space_mobile",
      "default": 20,
      "min": 0,
      "max": 100,
      "step": 5
    }
  ], 
  "blocks": [
    {
      "type": "slide",
      "name": "t:sections.slideshow.blocks.slide.name",
      "limit": 4,
      "settings": [ 
        {
          "type": "paragraph",
          "content": "t:sections.slideshow.blocks.framed_slide.settings.header.info"
        },
        {
          "type": "color_scheme",
          "id": "color_scheme",
          "default": "tertiary",
          "label": "t:sections.all.colors.label"
        },
        {
          "type": "image_picker",
          "id": "desktop_slide_image",
          "label": "t:sections.slideshow.blocks.slide.settings.desktop_slide_image.label"
        },
        {
          "type": "image_picker",
          "id": "mobile_slide_image",
          "label": "t:sections.slideshow.blocks.slide.settings.mobile_slide_image.label"
        },
        {
          "type": "video",
          "id": "slide_video",
          "label": "t:sections.slideshow.blocks.slide.settings.slide_video.label"
        },
        {
          "type": "header",
          "content": "t:sections.all.headers.content"
        },
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "t:settings_schema.global.settings.heading.label",
          "default": "Slide [heading]",
          "info": "t:settings_schema.global.settings.heading.info"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "t:sections.all.heading_size.label",
