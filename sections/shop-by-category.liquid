{% if section.index <= 2 %}
  {{ 'shop-by-category.css' | asset_url | preload_tag: as: 'style' }}
{% endif %}
{{ 'shop-by-category.css' | asset_url | stylesheet_tag }}

{% liquid
  if section.settings.section_container_width == 'global'
    assign containerClass = settings.container_width
  else
    assign containerClass = section.settings.section_container_width
  endif
%}

{%- capture corner_style -%}
  {% if section.settings.corner_style == 'top' %} 
      round-section round-top
      {% elsif section.settings.corner_style == 'bottom' %}
      round-section round-bottom
      {% elsif section.settings.corner_style == 'both' %}
      round-section round-bottom round-top
  {% endif %}
{%- endcapture -%}

<div class="section-wrapper scheme-{{ section.settings.color_scheme }} section-spacing pos-relative section-{{ section.settings.section_background }} {{ corner_style }}{% if section.settings.shape != 'none' %} section-shape-{{ section.settings.shape_position }} shape-{{ section.settings.shape }}{% endif %}">
  {% if section.settings.background_image != blank %}
    <div class="background-overlay-image media-overlay overlay-style-{{ section.settings.overlay_style }} blur-background-{{ section.settings.blur_background_image }}">
      {% render 'lazy-images'
        , image: section.settings.background_image %}
    </div>
  {% endif %}

  {% liquid
    assign header_content = false
    if section.settings.heading != blank or section.settings.description != blank
      assign header_content = true
    elsif section.settings.button_text != blank and section.settings.button_link != blank
      assign header_content = true
    endif
  %}

  <div class="{{ containerClass }}">
    <div class="shop-by-category-main-wrapper{% unless header_content %} without-header-content{% endunless %}">
      {% if header_content %}
        <div class="shop-by-category-header-wrapper text-left">
          {% if section.settings.heading != blank %}
            <{{ section.settings.seo_heading }} class="{{ section.settings.heading_font }} {{ section.settings.heading_size }}  {% if settings.enable_heading_animation %} animate-element-parent{% endif %}">
              {% if settings.enable_heading_animation %}
                <animate-element data-animate="fade-up-large" data-animate-delay="50">
              {% endif %}
              {%- capture markersPrefix -%}
                    <span class="markers-text {{ section.settings.markers_font }}">
                  {%- endcapture -%}
              {%- capture markersSuffix -%}
                    </span>
                  {%- endcapture -%}
              {{- section.settings.heading | replace: '++', '<br/>' | replace: "[", markersPrefix | replace: "]", markersSuffix -}}
              {% if settings.enable_heading_animation %}
                </animate-element>
              {% endif %}
            </{{ section.settings.seo_heading }}>
          {% endif %}
          {% if section.settings.description != blank %}
            <div class="section-description  {% if settings.enable_heading_animation %} animate-element-parent{% endif %}">
              {% if settings.enable_heading_animation %}
                <animate-element data-animate="fade-up-large" data-animate-delay="100">
              {% endif %}
              <p class="{{ section.settings.description_size }}">
                {{ section.settings.description | newline_to_br }}
              </p>
              {% if settings.enable_heading_animation %}
                </animate-element>
              {% endif %}
            </div>
          {% endif %}
          {% if section.settings.button_text != blank and section.settings.button_link != blank %}
            <div class="section-buttons  {% if settings.enable_heading_animation %} animate-element-parent{% endif %}">
              {% if settings.enable_heading_animation %}
                <animate-element data-animate="fade-up-large" data-animate-delay="150">
              {% endif %}
              {% render 'button-wrapper'
                , block_settings: section
                , 
 button_style: section.settings.button_style
                ,
 button_text: section.settings.button_text
                ,
 button_link: section.settings.button_link
                ,
 button_size: section.settings.button_size
              %}
              {% if settings.enable_heading_animation %}
                </animate-element>
              {% endif %}
            </div>
          {% endif %}

          <div class="section-slideshow-nav-wrapper align-items-center gap-10 d-none d-md-grid">
            <div class="slideshow-nav-btn cursor-pointer swiper-button-prev-{{ section.id }} arrow-style-{{ settings.arrow_style }}">
              {% if settings.arrow_style == 'star' %}
                {% render 'svg-icons'
                  , icon: 'star-arrow-prev' %}
              {% else %}
                {% render 'svg-icons'
                  , icon: 'arrow-icon-prev' %}
              {% endif %}
            </div>
            <div class="slideshow-nav-btn cursor-pointer swiper-button-next-{{ section.id }} arrow-style-{{ settings.arrow_style }}">
              {% if settings.arrow_style == 'star' %}
                {% render 'svg-icons'
                  , icon: 'star-arrow-next' %}
              {% else %}
                {% render 'svg-icons'
                  , icon: 'arrow-icon-next' %}
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
      <div class="shop-by-category-content-wrapper">
        <swiper-slideshow>
          <div class="swiper" data-swiper='{
              "loop": false,
              "speed": 600,
              "freeMode": true,
              "slidesPerView": 1.4,
              "spaceBetween": 15,
              "scrollbar": {
                  "el": ".swiper-scrollbar-{{ section.id }}",
                  "draggable": true
              },
              "navigation": {
                      "nextEl": ".swiper-button-next-{{ section.id }}",
                      "prevEl": ".swiper-button-prev-{{ section.id }}"
              },
               "breakpoints": {
                  "767": {
                    "slidesPerView": 1.8,
                    "loop": true
                  },
                  "991": {
                   "loop": true,
                    "spaceBetween": {{ section.settings.desktop_gap }},
                    {% if header_content %}
                    "slidesPerView": 2.5
                    {% else %}
                    "slidesPerView": 3
                    {% endif %}
                  },
                  "1199": {
                  "spaceBetween": {{ section.settings.desktop_gap }},
                  "loop": true,
                  {% if header_content %}
                    "slidesPerView": 3.5
                    {% else %}
                    "slidesPerView": 4
                    {% endif %}
                  } 
                }
            }'>
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                {% assign collection = block.settings.crad_collection %}
                <div class="swiper-slide">
                  <div class="shop-by-category-items category-card-style-{{ section.settings.card_style }}{% if section.settings.card_style == 'card' and section.settings.card_layout == 'zigzag' %} card-index-{% cycle '1', '2' %}{% endif %}">
                    {% liquid
                      if section.settings.image_ratio == 'landscape'
                        assign image_ratio = '75'
                      elsif section.settings.image_ratio == 'square'
                        assign image_ratio = '100'
                      elsif section.settings.image_ratio == 'portrait'
                        assign image_ratio = '120'
                      else
                        if block.settings.custom_image != blank
                          assign image_ratio = 1 | divided_by: block.settings.custom_image.aspect_ratio | times: 100
                        elsif collection.featured_image != blank
                          assign image_ratio = 1 | divided_by: collection.featured_image.aspect_ratio | times: 100
                        else
                          assign image_ratio = 100
                        endif
                      endif

                      capture current
                        cycle section.id: 1, 2, 3, 4
                      endcapture
                      assign placeholder_image = 'collection-apparel-' | append: current

                      assign button_link = ''
                      if block.settings.button_link != blank
                        assign button_link = block.settings.button_link
                      elsif collection != blank
                        assign button_link = collection.url
                      endif
                      assign widths =  '400, 600, 750, 1000, 1200, 1500, 1800'
                      assign sizes = '(min-width: 1024px) 33.3vw, 100vw'
                    %}
                    <{% if button_link != blank %}a href="{{ button_link }}" aria-label="Category card media link"{% else %}div{% endif %} class="category-card-media-wrapper">
                      <div class="test-coe media media-overlay overlay-style-{{ section.settings.card_overlay_style }}" style="--image-ratio:{{ image_ratio }}%;">
                        {% if block.settings.custom_image != blank %}
                          {% render 'lazy-images'
                            , image: block.settings.custom_image, widths: widths, sizes : sizes %}
                        {% elsif collection.featured_image != blank %}
                          {% render 'lazy-images'
                            , image: collection.featured_image, widths: widths, sizes : sizes %}
                        {% else %}
                          {{ placeholder_image | placeholder_svg_tag: 'placeholder-svg' }}
                        {% endif %}
                      </div>
                    </{% if button_link != blank %}a{% else %}div{% endif %}>
                    <div class="shop-by-category-items-content">
                      {% if block.settings.heading != blank or collection != blank %}
                        {% if button_link != blank %}
                          <a
                            href="{{ button_link }}"
                            aria-label="Category card link"
                            class="d-block">
                        {% endif %}
                        <p class="shop-by-category-items-title heading-font {{ section.settings.card_heading_size }}">
                          {% if block.settings.heading != blank %}
                            {{- block.settings.heading -}}
                          {% else %}
                            {{- collection.title -}}
                          {% endif %}
                        </p>
                        {% if button_link != blank %}
                          </a>
                        {% endif %}
                      {% endif %}
                      {% if block.settings.description != blank or collection.description != blank %}
                        <div class="shop-by-category-items-description">
                          <p class="{{ section.settings.card_description_size }}">
                            {% if block.settings.description %}
                              {{ block.settings.description | newline_to_br }}
                            {% else %}
                              {{ collection.description | strip_html | truncatewords: 20 }}
                            {% endif %}
                          </p>
                        </div>
                      {% endif %}
                      {% if block.settings.button_text != blank and button_link != blank %}
                        <div class="col-button-wrap">
                          {% render 'button-wrapper'
                            , block_settings: block
                            ,
 button_style: section.settings.card_button_style
                            ,
 button_text: block.settings.button_text
                            , 
 button_link: button_link
                            ,
 button_size: section.settings.card_button_size
                            ,
 button_secondary: true
                          %}
                        </div>
                      {% endif %}
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
            <div class="swiper-scrollbar swiper-scrollbar-{{ section.id }} d-block d-md-none"></div>
            {% unless header_content %}
              <div class="section-slideshow-nav-wrapper align-items-center gap-10 d-none d-md-grid">
                <div class="slideshow-nav-btn cursor-pointer swiper-button-prev-{{ section.id }} arrow-style-{{ settings.arrow_style }}">
                  {% if settings.arrow_style == 'star' %}
                    {% render 'svg-icons'
                      , icon: 'star-arrow-prev' %}
                  {% else %}
                    {% render 'svg-icons'
                      , icon: 'arrow-icon-prev' %}
                  {% endif %}
                </div>
                <div class="slideshow-nav-btn cursor-pointer swiper-button-next-{{ section.id }} arrow-style-{{ settings.arrow_style }}">
                  {% if settings.arrow_style == 'star' %}
                    {% render 'svg-icons'
                      , icon: 'star-arrow-next' %}
                  {% else %}
                    {% render 'svg-icons'
                      , icon: 'arrow-icon-next' %}
                  {% endif %}
                </div>
              </div>
            {% endunless %}
          </div>
        </swiper-slideshow>
      </div>
    </div>
  </div>
  {% if section.settings.shape != 'none' %}
    <div class="section-shape-wrapper shape-position-{{ section.settings.shape_position }} shape-flip-{{ section.settings.flip_shape }}">
      {% render 'shapes'
        , shape: section.settings.shape %}
    </div>
  {% endif %}
</div>

<style>
  #shopify-section-{{ section.id }} {
    --top-spacing: {{ section.settings.top_space_desktop }}px;
    --bottom-spacing: {{ section.settings.bottom_space_desktop }}px;
    --round-section-radius: {{ section.settings.corner_radius }}px;
  }
  @media only screen and (max-width: 767px) {
    #shopify-section-{{ section.id }} {
      --top-spacing: {{ section.settings.top_space_mobile }}px;
      --bottom-spacing: {{ section.settings.bottom_space_mobile }}px;
    }
  }

  {% if section.settings.section_visibility == 'large' %}
    @media(max-width: 767px) {
      #shopify-section-{{ section.id }} {
        display: none !important;
      }
    }
  {% elsif section.settings.section_visibility == 'small' %}
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} {
      display: none !important;
    }
  }
{% endif %}
</style>

