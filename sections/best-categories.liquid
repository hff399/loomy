                                width: 600,
                                height: image_height,
                                alt: image_alt,
                                class: 'collection-image',
                                loading: 'lazy'
                            }}
                        {% else %}
                        {{ 'product-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                        {% endif %}
                      </div>
                    </div>   
                  {% endif %} 
                {% endfor %}
                </div>
                </div>
            </div>
            <div class="best-categories-content-inner">
                  <div class="best-categories-swiper-arrow-wrapper categories-swiper-prev cursor-pointer swiper-button-prev-{{ section.id }}">
                      <div class="best-categories-arrow">
