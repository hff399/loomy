      <div class="{{ containerClass }}">       
        <best-categories class="best-categories-content-wrapper">
            <div class="best-categories-content-inner">
              <div class="swiper" data-categories-left>
                <div class="swiper-wrapper">
                {% for block in section.blocks %}
                  {% if block.type == 'categorie' %}
                    <div class="best-categories-content-images swiper-slide">
                      <div class="media" style="--image-ratio:{{ image_ratio }}%;"> 
                        {% if block.settings.left_image != blank %}
                        {% comment %} {% render 'lazy-images', image: block.settings.left_image, class: 'collection-image' %} {% endcomment %}
                             {%  assign image_alt = block.settings.left_image.alt | default: shop.name | strip_html %}  
                             {% assign image_height = 600 | divided_by: block.settings.left_image.aspect_ratio | round %}
                         {{
                              block.settings.left_image
                              | image_url: width: 600
                              | image_tag: sizes: '(max-width: 480px) 100vw, (max-width: 768px) 50vw, (max-width: 1024px) 33vw, (max-width: 1440px) 25vw, 20vw', 
